<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.withoutsultang.careroutine.viewmodel.FindAccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--아이디 찾기-->


        <!--받는 여자 임티-->


        <!--이메일 입력-->


        <!--생년월일 입력-->


        <!--아이디 검색 버튼-->


        <!--비밀번호 찾기-->
        <TextView
            android:id="@+id/txt_title_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="11dp"
            android:text="비밀번호 재설정"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/emoji_man"
            app:layout_constraintEnd_toStartOf="@+id/emoji_man"
            app:layout_constraintStart_toStartOf="parent" />


        <!--킹받는 남자 임티-->


        <!--아이디 입력-->


        <!--이메일 입력-->


        <!--인증번호 입력-->


        <!--전송 버튼-->


        <!--체크 버튼-->


        <!--비밀번호 재설정-->


        <!--망치 임티-->

        <ImageView
            android:id="@+id/emoji_man"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="238dp"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/man"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title_pw"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="60dp"
            android:background="@xml/black_radius_btn"
            android:onClick="@{() -> viewModel.onClickSend()}"
            android:text="SEND"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:backgroundTint="@color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextTextEmailAddress2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextTextEmailAddress2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="이메일 인증을 통해 비밀번호 재설정이 가능합니다."
            android:textColor="@color/realpink"
            android:textSize="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress2"
            app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress2"
            app:layout_constraintTop_toBottomOf="@+id/emoji_man" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="370dp"
            android:ems="11"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:text="@={viewModel.fpwemail}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <!--변경할 비밀번호 입력-->


        <!--변경할 비밀번호 재입력-->


        <!--확인 버튼-->

        <!--버튼-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>