<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.withoutsultang.careroutine.view.LoginActivity">

    <data>
        <variable
            name="loginViewModel"
            type="com.withoutsultang.careroutine.viewmodel.LoginViewModel" />
    </data>

    <ImageView
        android:id="@+id/img_appicon"
        android:layout_width="46dp"
        android:layout_height="55dp"
        android:src="@drawable/drug"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="21dp" />

    <ImageView
        android:id="@+id/img_kakaoicon"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:src="@drawable/kakaoicon"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="243dp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care\nRoutine"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/txt_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="294dp" />

    <EditText
        android:id="@+id/editboxId"
        android:layout_width="209dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@={loginViewModel.id}"
        android:hint="ID"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="329dp" />

    <EditText
        android:id="@+id/editboxPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@={loginViewModel.password}"
        android:hint="Password"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="374dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="212dp"
        android:layout_height="49dp"
        android:backgroundTint="#000000"
        android:enabled="true"
        android:text="Login"
        android:textColor="@color/white"
        android:onClick="@{() -> loginViewModel.loginClicked()}"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="436dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="212dp"
        android:layout_height="49dp"
        android:backgroundTint="#000000"
        android:enabled="true"
        android:text="Sign Up"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="493dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="558dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="558dp" />


</androidx.constraintlayout.widget.ConstraintLayout>