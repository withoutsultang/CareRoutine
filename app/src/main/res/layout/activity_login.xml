<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.withoutsultang.careroutine.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.withoutsultang.careroutine.view.LoginActivity">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:text="Care\nRoutine"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/img_kakaoicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_appicon" />

        <ImageView
            android:id="@+id/img_kakaoicon"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/kakaoicon"
            app:layout_constraintBottom_toTopOf="@+id/txt_or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="16dp"
            android:text="or"
            app:layout_constraintBottom_toTopOf="@+id/editboxEmail"
            app:layout_constraintEnd_toEndOf="@+id/img_kakaoicon"
            app:layout_constraintTop_toBottomOf="@+id/img_kakaoicon" />

        <EditText
            android:id="@+id/editboxEmail"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginBottom="7dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="@={viewModel.email}"
            app:layout_constraintBottom_toTopOf="@+id/editboxPw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_or" />

        <EditText
            android:id="@+id/editboxPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:text="@={viewModel.pw}"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintStart_toStartOf="@+id/editboxEmail"
            app:layout_constraintTop_toBottomOf="@+id/editboxEmail" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> viewModel.onClickFindAccount()}"
            android:text="비밀번호 찾기"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="149dp"
            android:onClick="@{() -> viewModel.onClickSignUp()}"
            android:text="회원가입"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:backgroundTint="#000000"
            android:onClick="@{() -> viewModel.onClickLogin()}"
            android:text="Login"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/editboxPw"
            app:layout_constraintStart_toStartOf="@+id/editboxPw"
            app:layout_constraintTop_toBottomOf="@+id/editboxPw" />

        <ImageView
            android:id="@+id/img_appicon"
            android:layout_width="46dp"
            android:layout_height="0dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/drug"
            app:layout_constraintBottom_toTopOf="@+id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>