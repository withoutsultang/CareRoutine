<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Contents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/TopMargin"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="vertical" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button15"
            android:layout_width="350dp"
            android:layout_height="126dp"
            android:background="@xml/stroke_background"
            android:elevation="50dp"
            android:text="알람 등록하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 아침 알림 -->
                <LinearLayout
                    android:id="@+id/layout_alarm_morning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tbx_morning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아침"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alarm_morning_info"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@xml/stroke_icon"
                        android:elevation="5dp"
                        android:orientation="horizontal"></LinearLayout>

                </LinearLayout>

                <!-- 점심 알림 -->
                <LinearLayout
                    android:id="@+id/layout_alarm_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tbx_afternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="점심"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alarm_afternoon_info"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@xml/stroke_icon"
                        android:elevation="5dp"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

                <!-- 저녁 알림 -->
                <LinearLayout
                    android:id="@+id/layout_alarm_evening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tbx_evening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저녁"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alarm_evening_info"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@xml/stroke_icon"
                        android:elevation="5dp"
                        android:orientation="horizontal"></LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>