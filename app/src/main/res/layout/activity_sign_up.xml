<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="signUpViewModel"
            type="com.withoutsultang.careroutine.viewmodel.SignUpViewModel" />
    </data>

    <!-- 전체 화면을 채우는 ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <!-- 프로필 이미지를 표시하는 ImageView -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- 이메일을 입력하는 EditText -->
        <EditText
            android:id="@+id/eEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@={signUpViewModel.eEmail}" />

        <!-- 이메일 확인 버튼 -->
        <Button
            android:id="@+id/bVerify"
            android:layout_width="69dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eEmail"
            app:layout_constraintEnd_toEndOf="@+id/eEmail"
            app:layout_constraintHorizontal_bias="0.6"
            android:onClick="@{() -> signUpViewModel.onClickVerify()}"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:backgroundTint="@color/black" />

        <!-- 비밀번호를 입력하는 EditText -->
        <EditText
            android:id="@+id/ePW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.ePW}"
            app:layout_constraintTop_toBottomOf="@+id/bVerify"
            app:layout_constraintStart_toStartOf="@+id/eEmail"
            app:layout_constraintEnd_toEndOf="@+id/eEmail" />

        <!-- 이름을 입력하는 EditText -->
        <EditText
            android:id="@+id/eName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.eName}"
            app:layout_constraintTop_toBottomOf="@+id/ePW"
            app:layout_constraintStart_toStartOf="@+id/eEmail"
            app:layout_constraintEnd_toEndOf="@+id/eEmail" />

        <!-- 비밀번호 제약 조건을 표시하는 TextView -->
        <TextView
            android:id="@+id/pw_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="영문자, 숫자, 특수문자를 포함하여 8~12글자로 입력해 주세요."
            android:textColor="#FF0000"
            android:textSize="8dp"
            app:layout_constraintStart_toStartOf="@+id/ePW"
            app:layout_constraintTop_toBottomOf="@+id/ePW" />

        <!-- 생년월일을 입력하는 EditText -->
        <EditText
            android:id="@+id/eBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="생년월일"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.eBirth}"
            app:layout_constraintTop_toBottomOf="@+id/pw_constraint"
            app:layout_constraintStart_toStartOf="@+id/pw_constraint"
            app:layout_constraintEnd_toEndOf="@+id/pw_constraint" />

        <!-- 생년월일 제약 조건을 표시하는 TextView -->
        <TextView
            android:id="@+id/email_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="숫자 8글자로 입력해 주세요."
            android:textColor="#FF0000"
            android:textSize="8dp"
            app:layout_constraintStart_toStartOf="@+id/eBirth"
            app:layout_constraintTop_toBottomOf="@+id/eBirth" />

        <!-- 이용약관 동의 체크박스 -->
        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="동의"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/email_constraint"
            app:layout_constraintStart_toStartOf="@+id/email_constraint" />

        <!-- 약관 동의 텍스트를 표시하는 TextView -->
        <TextView
            android:id="@+id/txtAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="이용약관 개인정보처리방침 \n 위치기반서비스 이용약관"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cbAgree"
            app:layout_constraintStart_toStartOf="@+id/cbAgree" />

        <!-- 가입 버튼 -->
        <Button
            android:id="@+id/bRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="가입"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="@+id/txtAgree"
            app:layout_constraintTop_toBottomOf="@+id/txtAgree" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
