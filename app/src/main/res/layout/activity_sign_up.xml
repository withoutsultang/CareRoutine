<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
<variable
    name="signUpViewModel"
    type="com.withoutsultang.careroutine.viewmodel.SignUpViewModel" />
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="114dp"
            android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/eEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/eEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="17dp"
            android:ems="10"
            android:hint="email"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.eEmail}"
            app:layout_constraintBottom_toTopOf="@+id/ePW"
            app:layout_constraintEnd_toStartOf="@+id/bVerify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/bVerify"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="133dp"
            android:background="@xml/black_radius_btn"
            android:onClick="@{() -> signUpViewModel.onClickVerify()}"
            android:text="CHECK"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/eName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eEmail"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/ePW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.ePW}"
            app:layout_constraintBottom_toTopOf="@+id/pw_constraint"
            app:layout_constraintEnd_toEndOf="@+id/eEmail"
            app:layout_constraintTop_toBottomOf="@+id/eEmail" />

        <EditText
            android:id="@+id/eName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.eName}"
            app:layout_constraintBottom_toTopOf="@+id/eBirth"
            app:layout_constraintEnd_toEndOf="@+id/pw_constraint"
            app:layout_constraintTop_toBottomOf="@+id/pw_constraint" />

        <TextView
            android:id="@+id/pw_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="14dp"
            android:text="영문자, 숫자, 특수문자를 포함하여 8~12글자로 입력해 주세요."
            android:textColor="#FF0000"
            android:textSize="8dp"
            app:layout_constraintBottom_toTopOf="@+id/eName"
            app:layout_constraintStart_toStartOf="@+id/ePW"
            app:layout_constraintTop_toBottomOf="@+id/ePW" />

        <EditText
            android:id="@+id/eBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="birthday"
            android:inputType="textPersonName"
            android:text="@={signUpViewModel.eBirth}"
            app:layout_constraintBottom_toTopOf="@+id/cbAgree"
            app:layout_constraintStart_toStartOf="@+id/eName"
            app:layout_constraintTop_toBottomOf="@+id/eName" />

        <Button
            android:id="@+id/bRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="136dp"
            android:background="@xml/black_radius_btn"
            android:onClick="@{() -> signUpViewModel.onClickSignUp()}"
            android:text="JOIN"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cbAgree"
            app:layout_constraintTop_toBottomOf="@+id/cbAgree" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/eBirth"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="23dp"
            android:text="이용약관 개인정보처리방침 \n 위치기반서비스 이용약관"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/cbAgree"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eBirth" />

        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:checked="@={signUpViewModel.isTermsChecked}"
            android:text="동의"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/bRegistration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/eBirth" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>